<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>GetAwardByID</title>
</head>
<body>
    <form action="~/pages/GetAwardById" method="post">
        <label>Award's id</label>
        <input type="number" name="aID" />

        <button type="submit">Submit</button>
        <button type="button" id="homeBtn">Home</button>
    </form>

    @{ if (IsPost)
        {
            int aID = int.Parse(Request.Params["aID"]);

            var userLogic = DependencyResolver.UserLogic;
            var awardLogic = DependencyResolver.AwardLogic;

            <div><img src=@awardLogic.GetById(aID).url height="25" width="25" />  @awardLogic.GetById(aID)</div>
        }
    }
    <script src="~/js/homeButton.js"></script>
</body>
</html>
